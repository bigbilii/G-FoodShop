<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.guoxin.manager.mapper.StoreMapper">

    <resultMap id="BaseResultMap" type="me.guoxin.pojo.GfsStore">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="longitude" jdbcType="DOUBLE" property="longitude"/>
        <result column="latitude" jdbcType="DOUBLE" property="latitude"/>
        <association property="city" resultMap="me.guoxin.manager.mapper.CityMapper.BaseResultMap"/>
    </resultMap>

    <sql id="Base_Column_List">
        s.id, s.address, s.phone, s.latitude, s.longitude
    </sql>

    <select id="selectByCityId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from gfs_store s
        where city_id = #{cityId}
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from gfs_store s
        where id = #{id}
    </select>


</mapper>